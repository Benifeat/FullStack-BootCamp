<%- include('partials/header.ejs') %>

    <div class="table-wrapper">

        <% if (meat.length> 0) {%>

            <table class="table table-hovered">

                <thead class="thead-dark">

                    <tr>

                        <th scope="col">ID</th>

                        <th scope="col">Image</th>

                        <th scope="col">Name</th>

                        <th scope="col">Country</th>

                        <th scope="col">Calories per 100g</th>

                        <th scope="col">Cooking Time</th>

                        <th scope="col">Description</th>

                        <th scope="col">Meat Type</th>

                        <th scope="col">Action</th>

                    </tr>

                </thead>

                <tbody>

                    <% meat.forEach((m, index)=> { %>

                        <tr>

                            <th scope="row">
                                <%= m.id %>
                            </th>

                            <td><img src="<%= hostingDir %>/assets/img/<%= m.image %>" class="rounded-circle food-img" alt=""></td>

                            <td>
                                <%= m.name %>
                            </td>

                            <td>
                                <%= m.country_name %>
                            </td>

                            <td>
                                <%= m.calories_per_100g %>kcal
                            </td>

                            <td>
                                <%= m.cooking_time_min %>min
                            </td>

                            <td>
                                <%= m.description %>
                            </td>

                            <td>
                                <%= m.meat_type %>
                            </td>

                            <td>
                                <a href="<%= hostingDir %>/edit/<%= m.id %>" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="<%= hostingDir %>/delete/<%= m.id %>" class="btn btn-sm btn-danger" 
                                   onclick="return confirm('Are you sure you want to delete this meat entry?')">Delete</a>
                              </td>

                        </tr>

                        <% }) %>

                </tbody>

            </table>

            <% } else { %>

                <p class="text-center">No meat found. Go <a href="<%= hostingDir %>/add">here</a> to add meat.</p>

                <% } %>

    </div>

    </div>

    </body>

    </html>